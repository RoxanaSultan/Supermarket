<UserControl x:Class="Supermarket.Views.Categories"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Supermarket.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Header -->
        <TextBlock Text="Categories" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>

        <!-- List of categories -->
        <ListBox ItemsSource="{Binding Categories}" DisplayMemberPath="Name" Width="200" Grid.Row="1"/>
    </Grid>
</UserControl>
