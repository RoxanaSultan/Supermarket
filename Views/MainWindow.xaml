<Window x:Class="Supermarket.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Supermarket.Views"
        Title="Main Window" Height="450" Width="800">
    <Grid>
        <local:Admin x:Name="AdminWindow" Visibility="Hidden"/>
        <local:Cashier x:Name="CashierWindow" Visibility="Hidden" DataContext="{Binding receiptVM}"/>
        <!-- Position the buttons using a StackPanel for simplicity -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Administrator Button -->
            <Button x:Name="AdminButton" 
                    Content="Administrator" 
                    Width="200" Height="50" 
                    Margin="10" 
                    Click="AdminButton_Click"
                   />
            <!-- Cashier Button -->
            <Button x:Name="CashierButton" 
                    Content="Cashier" 
                    Width="200" Height="50" 
                    Margin="10" 
                    Click="CashierButton_Click"
                    />
        </StackPanel>
    </Grid>
</Window>
