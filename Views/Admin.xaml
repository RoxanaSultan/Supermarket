<UserControl x:Class="Supermarket.Views.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Supermarket.Views"
        mc:Ignorable="d"
        Height="450" Width="800">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="#B5C0D0" BorderThickness="1.5" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#213137"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <TabControl>
            <!-- Tab for Editing -->
            <TabItem Header="Edit Data">
                <TabControl>
                    <TabItem Header="Users">
                        <Grid>
                            <local:Users DataContext="{Binding userVM}"/>
                        </Grid>
                    </TabItem>

                    <TabItem Header="Producers">
                        <Grid>
                            <local:Producers DataContext="{Binding producerVM}"/>
                        </Grid>
                    </TabItem>

                    <TabItem Header="Categories" >
                        <local:Categories DataContext="{Binding productVM}"/>
                    </TabItem>

                    <TabItem Header="Products">
                        <Grid>
                            <local:Products DataContext="{Binding productVM}"/>
                        </Grid>
                    </TabItem>

                    <TabItem Header="Inventory">
                        <Grid>
                            <local:Stocks DataContext="{Binding inventoryVM}"/>
                        </Grid>
                    </TabItem>
                </TabControl>
            </TabItem>

            <!-- Tab for Data Search -->
            <TabItem Header="Search Data">
                <TabControl>
                    <TabItem Header="Users">
                        <local:UsersSearch DataContext="{Binding userVM}"/>
                    </TabItem>
                    <TabItem Header="Categories">
                        <local:CategoriesSearch DataContext="{Binding productVM}"/>
                    </TabItem>
                    <TabItem Header="Producers">
                        <local:ProducersSearch DataContext="{Binding producerVM}"/>
                    </TabItem>
                    <TabItem Header="Receipts">
                        <local:ReceiptsSearch DataContext="{Binding receiptVM}"/>
                    </TabItem>
                </TabControl>
            </TabItem>
            <TabItem Header="Cashier">
                <Grid>
                    <Button Content="Go to Cashier" Command="{Binding DataContext.SwitchToCashierCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}" Height="50" Width="100"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
