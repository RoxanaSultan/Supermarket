<UserControl x:Class="Supermarket.Views.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Supermarket.Views"
        mc:Ignorable="d"
        Height="450" Width="800">
    <Grid>
        <TabControl>
            <!-- Tab for Editing -->
            <TabItem Header="Editing">
                <StackPanel>
                    <Menu VerticalAlignment="Top">
                        <!-- Menu for Users -->
                        <MenuItem Header="Users">
                            <MenuItem Header="Add User"/>
                            <MenuItem Header="Edit User"/>
                            <MenuItem Header="Delete User"/>
                            <MenuItem Header="View Users"/>
                        </MenuItem>
                        <!-- Menu for Producers -->
                        <MenuItem Header="Producers">
                            <MenuItem Header="Add Producer"/>
                            <MenuItem Header="Edit Producer"/>
                            <MenuItem Header="Delete Producer"/>
                            <MenuItem Header="View Producers"/>
                        </MenuItem>

                        <!-- Menu for Categories -->
                        <MenuItem Header="Categories">
                            <MenuItem Header="Add Category"/>
                            <MenuItem Header="Edit Category"/>
                            <MenuItem Header="Delete Category"/>
                            <MenuItem Header="View Categories"/>
                        </MenuItem>
                        <MenuItem Header="Products">
                            <MenuItem Header="Add Product"/>
                            <MenuItem Header="Edit Product"/>
                            <MenuItem Header="Delete Product"/>
                            <MenuItem Header="View Products"/>
                        </MenuItem>

                        <!-- Menu for Stocks -->
                        <MenuItem Header="Stocks">
                            <MenuItem Header="Add Stock"/>
                            <MenuItem Header="Edit Stock"/>
                            <MenuItem Header="Delete Stock"/>
                            <MenuItem Header="View Stocks"/>
                        </MenuItem>

                    </Menu>

                    <!-- Add Button -->
                    <Button Content="Add" Width="100" Height="40" Margin="5" HorizontalAlignment="Left"
                    />
                    <!-- Edit Button -->
                    <Button Content="Edit" Width="100" Height="40" Margin="5" HorizontalAlignment="Left"
                    />
                    <!-- Delete Button -->
                    <Button Content="Delete" Width="100" Height="40" Margin="5" HorizontalAlignment="Left"
                    />
                    <!-- View Button -->
                    <Button Content="View" Width="100" Height="40" Margin="5" HorizontalAlignment="Left"
                    />


                </StackPanel>
            </TabItem>

            <!-- Tab for Data Search -->
            <TabItem Header="Data Search">
                <StackPanel>
                    <Menu VerticalAlignment="Top">
                        <!-- Menu for Producers -->
                        <MenuItem Header="Producers">

                        </MenuItem>

                        <!-- Menu for Categories -->
                        <MenuItem Header="Categories">

                        </MenuItem>

                        <!-- Menu for Users -->
                        <MenuItem Header="Users">

                        </MenuItem>

                        <!-- Menu for Receipts -->
                        <MenuItem Header="Receipts">

                        </MenuItem>
                    </Menu>
                </StackPanel>
            </TabItem>

            <!-- Tab for Offers -->
            <TabItem Header="Offers">
                <StackPanel>
                    <TextBlock Text="Content for Offers" Margin="10"/>
                    <!-- Add controls for managing offers here -->
                </StackPanel>
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
