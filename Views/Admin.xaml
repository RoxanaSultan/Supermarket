<UserControl x:Class="Supermarket.Views.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Supermarket.Views"
        mc:Ignorable="d"
        Height="450" Width="800">
    <Grid>
        <TabControl>
            <!-- Tab for Editing -->
            <TabItem Header="Editing">
                <TabControl>
                    <TabItem Header="Users">
                        <StackPanel>
                            <TextBlock Text="Content for Users" Margin="10"/>
                            <!-- Add controls for managing users here -->
                        </StackPanel>
                    </TabItem>

                    <TabItem Header="Producers">
                        <Grid>
                            <local:Producers DataContext="{Binding producerVM}"/>
                            <!--<Border Height="180" Width="140" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,15,0">
                                <local:Commands DataContext="{Binding producerVM}"/>
                            </Border>-->
                        </Grid>
                    </TabItem>

                    <TabItem Header="Categories">
                        <StackPanel>
                            <TextBlock Text="Content for Categories" Margin="10"/>
                            <!-- Add controls for managing categories here -->
                        </StackPanel>
                    </TabItem>

                    <TabItem Header="Products">
                        <Grid>
                            <local:Products/>
                            <Border Height="180" Width="140" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,15,0">
                                <!--<local:Commands DataContext="ProductsVM"/>-->
                            </Border>
                        </Grid>
                    </TabItem>

                    <TabItem Header="Stocks">
                        <StackPanel>
                            <TextBlock Text="Content for Stocks" Margin="10"/>
                            <!-- Add controls for managing stocks here -->
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </TabItem>

            <!-- Tab for Data Search -->
            <TabItem Header="Data Search">
                <StackPanel>
                    <Menu VerticalAlignment="Top">
                        <!-- Menu for Producers -->
                        <MenuItem Header="Producers">

                        </MenuItem>

                        <!-- Menu for Categories -->
                        <MenuItem Header="Categories">

                        </MenuItem>

                        <!-- Menu for Users -->
                        <MenuItem Header="Users">

                        </MenuItem>

                        <!-- Menu for Receipts -->
                        <MenuItem Header="Receipts">

                        </MenuItem>
                    </Menu>
                </StackPanel>
            </TabItem>

            <!-- Tab for Offers -->
            <TabItem Header="Offers">
                <StackPanel>
                    <TextBlock Text="Content for Offers" Margin="10"/>
                    <!-- Add controls for managing offers here -->
                </StackPanel>
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
